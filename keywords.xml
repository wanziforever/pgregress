<?xml version="1.0" encoding="utf-8"?>
<operations>
  <operation keyword="AUDIT_LOG"  function="audit_log" desc="check the audit log">
    <arg desc="the profile name">profile_name</arg>
  </operation>
  <operation keyword="RESTART_DB"  function="restart_db" desc="restart the database instance">
    <arg desc="the directory of log">log_file</arg>
  </operation>
  <operation keyword="STOP_DB"  function="stop_db" desc="restart the database instance">
    <arg desc="the directory of log">log_file</arg>
  </operation>
  <operation keyword="START_DB"  function="start_db" desc="restart the database instance">
    <arg desc="the directory of log">log_file</arg>
  </operation>
  <operation keyword="RELOAD_DB"  function="reload_db" desc="reload the database instance">
  </operation>
  <operation keyword="SET_CONFIG" function="set_config" desc="set the property in configuration file">
    <arg desc="file name going to configured">name</arg>
    <arg desc="variable name going to set">name</arg>
    <arg desc="value going to set">value</arg>
  </operation>
  <operation keyword="HOLD_ON" function="hold_on" desc="wait some time">
    <arg desc="time to wait(seconds)">seconds</arg>
  </operation>
  <operation keyword="SEND_CMD" function="send_cmd" desc="send commands to specified server">
    <arg desc="the command that will be sent">cmd</arg>
    <arg desc="the server name going to execute commands">server</arg>
  </operation>
  <operation keyword="PSQL" function="psql" desc="send psql commands to specified server">
    <arg desc="the command that will be sent">cmd</arg>
    <arg desc="the server name going to execute commands">server</arg>
  </operation>
</operations>
